doctype html

html
  head
    title QUIZ APP
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js')
    script(src='/socket.io/socket.io.js')
    style.
      body        { padding-top:80px; word-wrap:break-word; }

  body
    script(src='/javascripts/room.js')
    .container
      .page-header.text-center
        h1
          span.fa.fa-superpowers
          |  Quiz App
        a.btn.btn-default.btn-sm(href='/logout') Logout
      .container
        #createRoom
          .row.equal
            .col-sm-6
              .well
                h3 ownwer: #{user.google.name}
                form(method='POST' action='')
                  div.form-group
                    label(for='name') Game Name:
                    input#name.form-control(type='text', name='name')
                  br
                  input#owner(type='hidden', name='owner', value=user.google.name)
                  button#btnAddRoom.btn.btn-primary(type='submit') Create Room

            if errors 
              ul
                for error in errors
                  li!= error.msg
        